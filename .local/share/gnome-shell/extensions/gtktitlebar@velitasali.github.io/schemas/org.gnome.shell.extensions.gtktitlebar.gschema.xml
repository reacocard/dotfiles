<schemalist gettext-domain="gnome-shell-extensions">
    <enum id="org.gnome.shell.extensions.gtktitlebar.hideTitlebars">
      <value value="0" nick="never" />
      <value value="1" nick="tiled" />
      <value value="2" nick="maximized" />
      <value value="3" nick="both" />
      <value value="4" nick="always" />
    </enum>
    <schema id="org.gnome.shell.extensions.gtktitlebar" path="/org/gnome/shell/extensions/gtktitlebar/">
        <key name="restrict-to-primary-screen" type="b">
            <default>true</default>
            <summary>Restrict to primary screen</summary>
        </key>
        <key name="hide-window-titlebars" enum="org.gnome.shell.extensions.gtktitlebar.hideTitlebars">
          <default>"maximized"</default>
          <summary>Select windows state to hide titlebars.</summary>
        </key>
    </schema>
</schemalist>
