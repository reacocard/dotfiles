# Automatically share connections when contacting the same host.
Match all
  ControlMaster auto
  ControlPath ~/.ssh/control/%r@%h:%p
  # Persist connection indefinitely.
  ControlPersist 0
  # Send a keepalive every 5s.
  ServerAliveInterval 5
  # End connection after 4 failed keepalives.
  ServerAliveCountMax 4
