#!/bin/sh

PULSESINK=`pactl info | grep 'Default Sink' | cut -c 15-`
VOLUMEINCREMENT="2%"

case $1 in
	"up")
		pactl -- set-sink-volume $PULSESINK +$VOLUMEINCREMENT
		;;
	"down")
		pactl -- set-sink-volume $PULSESINK -$VOLUMEINCREMENT
		;;
	"mute")
		pactl set-sink-mute $PULSESINK  $([[ $(pactl list sinks | grep -A 10 "Name: $PULSESINK" | grep -m1 Mute: | awk '{print $2}') == 'no' ]] && echo '1' || echo '0')
		;;
	*)
		echo "Unrecognized option"
		exit 1
		;;
esac

