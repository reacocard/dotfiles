#!/bin/bash
# Shows mounts, attempting to hide internal system mounts that clutter output.

set -o errexit
set -o nounset
set -o pipefail

< /proc/mounts egrep -v ' (sysfs|proc|devtmpfs|devpts|securityfs|cgroup2|cgroup|mqueue|hugetlbfs|debugfs|fusectl|binfmt+misc|pstore|bpf|efivarfs|/run|/dev/shm|/run/lock|/proc/sys/fs/binfmt_misc|/sys/fs/cgroup) '
